{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2017",
    "rootDir": "src",
    "outDir": "lib",
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": ["WebWorker", "ES2017", "DOM"]
  },
  "exclude": [
    "node_modules",
    "scripts",
    "lib",
    "test",
    "examples"
  ]
}
